<% content_for :title do %>Raphael Reiter - Music<% end %>
<% content_for :description do %>Website of Raphael Reiter<% end %>
<section>
  <div class="column">
    <h3>Subscribe to my newsletter</h3>
  </div>
  <div class="column">
    <div class="form-centered">
      <%= simple_form_for @visitor do |f| %>
        <%= f.error_notification %>
        <%= f.input :email, label: false, :placeholder => 'Your email address...' %>
        <br/>
        <%= f.button :submit, "Sign up for the newsletter", :class => "submit" %>
      <% end %>
    </div>
  </div>
</section>
